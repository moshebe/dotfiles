# Reload settings
auto-reload	yes
reload-time	600

# News settings
max-items			20
text-width			80
browser				"open %u"
feedlist-format			"%4n %9u %t"
articlelist-title-format	"%N %V - '%T' (%u unread, %t total)"

# vim-like bindings
bind-key j down
bind-key k up
bind-key ^J next-feed
bind-key ^K prev-feed
bind-key SPACE pagedown
bind-key b pageup
bind-key z sort
bind-key Z rev-sort
bind-key g home
bind-key G end
bind-key ^R random-unread
bind-key U reload-urls
bind-key o open-in-browser-and-mark-read
bind-key O open-in-browser
bind-key o open-in-browser article

# # Solarized dark
color background	default   default
color listnormal	default   default
color listfocus		white     black
color listfocus_unread	black	  white
color info		cyan      black
color article		default   default
highlight article "^(Title):.*$" blue default
highlight article "https?://[^ ]+" red default
highlight article "\\[image\\ [0-9]+\\]" green default
